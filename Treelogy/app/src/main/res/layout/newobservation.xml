<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    android:focusableInTouchMode="true">

    <Button
        android:id="@+id/btnSelectPhoto1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_action_camera"
        android:text="FOTOĞRAF ÇEK" />

    <Button
        android:id="@+id/btnSelectPhoto2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="#000000"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_action_picture"
        android:paddingLeft="20dp"
        android:text="GALERİDEN SEÇ"
        android:layout_below="@+id/btnSelectPhoto1"/>

    <Button
        android:id="@+id/btnSelectPhoto3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#000000"
        android:layout_marginTop="1dp"
        android:background="@android:color/transparent"
        android:alpha="0.6"
        android:drawableLeft="@drawable/d_donate"
        android:paddingLeft="20dp"
        android:text="KATKIDA BULUN"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
